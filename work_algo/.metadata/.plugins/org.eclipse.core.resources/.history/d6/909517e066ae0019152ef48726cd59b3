package array1;

import java.io.FileInputStream;
import java.util.Scanner;

public class BinarySearch1_반복_서울9반_김동주 {
	
	public static int[] a = {1,2,3,4}; //i는 0~15까지 4자리 2진수
	
	public static boolean binarySearch(int[] a, int key) { //찾는 부분의 배열, 찾는 
		int start = 0 , middle =0;
		int end = a.length -1;
		while(start <= end) {
			middle = (start  + end)/2; //중간값 인덱스 midddle
			if(a[middle] == key) {
				return true;
			}else if ( a[middle] > key) {
				end = middle -1;
			}else start = middle +1;
		}
		return false;
	}
	
	public static void main(String[] args) {
		for(int i=0; i<(1<<a.length); i++) {
			//System.out.println("i=" +i+" "+ Integer.toBinaryString(i));
			int sum =0;
			for(int j=0; j<a.length; j++) {
				if((i&(1<<j))>0) { //비트연산으로 어떤 자리가 1인지를 확인하는 코드
					System.out.print(a[j]+" ");
					sum = sum + a[j];
				}
			}
			System.out.println(" sum="+sum);
		}
		
	}

}