package array1;

public class Array1Test {
	public static void main(String[] args) {
		//1.선언
		int[] a; //int a[];
		//2.생성
		a = new int[3];
		//1+2동시에
		int[] b = new int[3];
		//3.초기화
		b[0]=10;
		b[1]=11;
		b[2]=12;
		//오직 0,1,2만 사용 가능
		//b[3]=13; //java.lang.ArrayIndexOutOfBoundsException: 3
		//b[-1]=14; //java.lang.ArrayIndexOutOfBoundsException: -1
	}
}
