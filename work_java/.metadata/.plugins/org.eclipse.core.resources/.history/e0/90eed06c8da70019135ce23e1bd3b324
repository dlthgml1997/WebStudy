package com.ssafy.java;

public class AlpaTest2 {

	public static void main(String[] args) {
		char x = 'A';
		for(int i=5 ; i>0 ; i--) {
			for(int k=0; k<(2*i); k++)
				System.out.print(" ");
			for(int j=0 ; j<=i ; j++) {
				System.out.print(x++);
			}
			System.out.println("\n");
		}
		
	}

}
