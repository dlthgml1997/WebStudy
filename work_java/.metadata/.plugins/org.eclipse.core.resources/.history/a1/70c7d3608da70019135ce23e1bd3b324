package com.ssafy.java;

public class AlpaTest2 {

	public static void main(String[] args) {
		char x = 'A';
		for(int i=0 ; i<5 ; i++) {
			for(int j=i ; j>=0 ; j--) {
				for(int k=0 ; k<(2*j); k++)
					System.out.print(" ");
				System.out.print(x++);
			}
			System.out.println("\n");
		}
		
	}

}
