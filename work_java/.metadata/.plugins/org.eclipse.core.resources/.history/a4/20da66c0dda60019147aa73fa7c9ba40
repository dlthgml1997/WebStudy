package com.prac1;

public class Ripple {

	public static void main(String[] args) {
		String name = "MX ERGO";
		String number = "910-005181";
		int price = 55000;
		boolean battery = true;
		String made_in = "Logitec";
		int buttons = 8;
		double GHz = 2.4;
		int weight = 259;
		String b = "";
		if (battery == true)
			b = "지원됨";
		else 
			b = "지원되지 않음";
			
		System.out.println("제품명: "+name+"\n제품번호: "+number+"\n가격:"
				+price+"\n배터리 충전식 지원여부: "+b+"\n제조사: "
				+made_in+"\n버튼수: "+buttons+"\n무선기술: "+GHz+" GHz"+"\n무게: "+weight+"g");

	}

}
