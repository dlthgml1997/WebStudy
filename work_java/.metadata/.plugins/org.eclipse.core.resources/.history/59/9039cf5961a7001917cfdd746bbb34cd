package com.basic;

public class LoopTest {

	public static void main(String[] args) {
		// for
		for(int i = 0; i < 5; ++i) { //조건식에서 i++ 나 ++i나 동일하게 작동, 초기식에서 타입 표기해줘야함
				System.out.println(i + ". hello");
		}
		System.out.println("-----------------------------");
		
		//while
		int j = 0; //초기식
		while(j < 5) { //조건식
			System.out.println(j + ". hello");
			j++; //증감식
		}
		
	}

}
